<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.veteriner.controller.MainPageController"
            prefHeight="800.0" prefWidth="1200.0">
    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <!-- Başlık ve Yenile butonu -->
        <HBox spacing="20.0" alignment="CENTER_LEFT">
            <Label text="Dashboard" style="-fx-font-size: 24px;"/>
            <Button text="Yenile" onAction="#refreshClicked"/>
        </HBox>

        <!-- Özet bilgi kartları -->
        <HBox spacing="20.0">
            <VBox styleClass="info-card" spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label fx:id="kritikStokLabel" style="-fx-font-size: 18px;" text="0 ürün kritik seviyede"/>
                <TableView fx:id="kritikStokTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="kritikStokUrunAdiColumn" text="Ürün Adı" prefWidth="200.0"/>
                        <TableColumn fx:id="kritikStokMevcutColumn" text="Mevcut Stok" prefWidth="100.0"/>
                        <TableColumn fx:id="kritikStokMinimumColumn" text="Minimum Stok" prefWidth="100.0"/>
                    </columns>
                </TableView>
            </VBox>
            
            <VBox styleClass="info-card" spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label fx:id="sktLabel" style="-fx-font-size: 18px;" text="0 ürünün SKT'si yaklaşıyor"/>
                <TableView fx:id="sktTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="sktUrunAdiColumn" text="Ürün Adı" prefWidth="200.0"/>
                        <TableColumn fx:id="sktTarihiColumn" text="Son Kullanma Tarihi" prefWidth="150.0"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
        
        <!-- Alt kısım -->
        <HBox spacing="20.0">
            <VBox styleClass="info-card" spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <HBox spacing="20.0">
                    <Label fx:id="toplamUrunLabel" style="-fx-font-size: 18px;" text="0 çeşit ürün"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="toplamBorcLabel" style="-fx-font-size: 18px;" text="0.00 TL toplam borç"/>
                </HBox>
                <TableView fx:id="borcluMusterilerTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="borcluMusteriAdiColumn" text="Müşteri Adı" prefWidth="200.0"/>
                        <TableColumn fx:id="borcMiktariColumn" text="Borç Miktarı" prefWidth="150.0"/>
                    </columns>
                </TableView>
            </VBox>
            
            <VBox styleClass="info-card" spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <HBox spacing="20.0" alignment="CENTER_LEFT">
                    <Label fx:id="kategorilerLabel" style="-fx-font-size: 18px;" text="Kategoriler"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Kategori Yönetimi" onAction="#handleKategoriYonetimi"/>
                </HBox>
                <TableView fx:id="kategoriTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="kategoriAdiColumn" text="Kategori Adı" prefWidth="200.0"/>
                        <TableColumn fx:id="urunSayisiColumn" text="Ürün Sayısı" prefWidth="100.0"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </VBox>
    
    <stylesheets>
        <URL value="@/styles/styles.css"/>
    </stylesheets>
</AnchorPane>
