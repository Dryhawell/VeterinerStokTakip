<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.veteriner.controller.DashboardController">
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10">
        <!-- Başlık -->
        <Label text="Veteriner Stok Takip - Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold" />

        <!-- Üst Kartlar -->
        <HBox spacing="20">
            <!-- Toplam Satış Kartı -->
            <VBox styleClass="dashboard-card" spacing="10" minWidth="200" style="-fx-background-color: #4CAF50; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Toplam Satış" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                <Label fx:id="toplamSatisLabel" text="0 TL" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </VBox>

            <!-- Toplam Borç Kartı -->
            <VBox styleClass="dashboard-card" spacing="10" minWidth="200" style="-fx-background-color: #f44336; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Toplam Borç" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                <Label fx:id="toplamBorcLabel" text="0 TL" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </VBox>

            <!-- Toplam Tahsilat Kartı -->
            <VBox styleClass="dashboard-card" spacing="10" minWidth="200" style="-fx-background-color: #2196F3; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Toplam Tahsilat" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                <Label fx:id="toplamTahsilatLabel" text="0 TL" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </VBox>
        </HBox>

        <!-- Alt Kartlar -->
        <HBox spacing="20">
            <!-- Kategori Özeti -->
            <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <Label text="Kategori Özeti" style="-fx-font-size: 16px; -fx-font-weight: bold" />
                <TableView fx:id="kategoriTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="kategoriAdColumn" text="Kategori" prefWidth="150" />
                        <TableColumn fx:id="urunSayisiColumn" text="Ürün Sayısı" prefWidth="100" />
                        <TableColumn fx:id="stokDegeriColumn" text="Stok Değeri" prefWidth="100" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Düşük Stok Uyarıları -->
            <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <Label text="Düşük Stok Uyarıları" style="-fx-font-size: 16px; -fx-font-weight: bold" />
                <TableView fx:id="dusukStokTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="urunAdColumn" text="Ürün Adı" prefWidth="150" />
                        <TableColumn fx:id="stokMiktariColumn" text="Stok Miktarı" prefWidth="100" />
                        <TableColumn fx:id="kritikSeviyeColumn" text="Kritik Seviye" prefWidth="100" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>