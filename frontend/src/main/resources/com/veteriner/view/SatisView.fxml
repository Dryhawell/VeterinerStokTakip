<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.veteriner.controller.SatisController" spacing="10" styleClass="content-vbox">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Satış İşlemi" styleClass="view-title"/>
    </HBox>

    <!-- Üst Panel -->
    <GridPane hgap="10" vgap="10">
        <!-- Müşteri Seçimi -->
        <Label text="Müşteri:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cmbMusteri" prefWidth="200" promptText="Müşteri seçin..."
                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label fx:id="lblMusteriBorc" text="Mevcut Borç: 0,00 TL" 
               GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    </GridPane>

    <!-- Ürün Ekleme Formu -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="cmbUrun" prefWidth="250" promptText="Ürün seçin..."/>
        <Label text="Miktar:"/>
        <TextField fx:id="txtMiktar" prefWidth="100" promptText="0"/>
        <Label text="Birim Fiyat:"/>
        <TextField fx:id="txtBirimFiyat" prefWidth="100" promptText="0,00" disable="true"/>
        <Button fx:id="btnUrunEkle" text="Ekle" onAction="#handleUrunEkle"/>
    </HBox>

    <!-- Sepet Tablosu -->
    <TableView fx:id="sepetTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUrunAd" text="Ürün" prefWidth="200"/>
            <TableColumn fx:id="colMiktar" text="Miktar" prefWidth="100"/>
            <TableColumn fx:id="colBirimFiyat" text="Birim Fiyat" prefWidth="100"/>
            <TableColumn fx:id="colToplamFiyat" text="Toplam" prefWidth="100"/>
            <TableColumn fx:id="colIslemler" text="İşlemler" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Alt Panel - Ödeme Bilgileri -->
    <GridPane hgap="10" vgap="10" styleClass="payment-panel">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>

        <!-- Sol Panel - Toplam Bilgileri -->
        <VBox spacing="5" GridPane.columnIndex="0">
            <Label text="Toplam Tutar:" styleClass="total-label"/>
            <Label fx:id="lblToplamTutar" text="0,00 TL" styleClass="total-value"/>
        </VBox>

        <!-- Orta Panel - Ödeme Bilgileri -->
        <VBox spacing="5" GridPane.columnIndex="1">
            <Label text="Ödenen Tutar:"/>
            <TextField fx:id="txtOdenenTutar" promptText="0,00"/>
            <Label text="Kalan Tutar:"/>
            <TextField fx:id="txtKalanTutar" promptText="0,00" disable="true"/>
        </VBox>

        <!-- Sağ Panel - İşlem Butonları -->
        <VBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="2">
            <Button fx:id="btnSatisiTamamla" text="Satışı Tamamla" 
                    onAction="#handleSatisiTamamla" styleClass="primary-button"
                    disable="true" maxWidth="Infinity"/>
            <Button fx:id="btnIptal" text="İptal" 
                    onAction="#handleIptal" styleClass="secondary-button"
                    maxWidth="Infinity"/>
        </VBox>
    </GridPane>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblStatus" text=""/>
    </HBox>
</VBox>