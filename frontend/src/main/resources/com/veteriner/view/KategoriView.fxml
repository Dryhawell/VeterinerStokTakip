<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.veteriner.controller.KategoriController" spacing="10" styleClass="content-vbox">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Kategori Yönetimi" styleClass="view-title"/>
    </HBox>

    <!-- Form Area -->
    <GridPane hgap="10" vgap="10">
        <Label text="Kategori Adı:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtKategoriAdi" promptText="Kategori adını giriniz" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Açıklama:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtAciklama" promptText="Açıklama giriniz" wrapText="true"
                  prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button fx:id="btnKaydet" text="Kaydet" onAction="#handleKaydet" styleClass="primary-button"/>
            <Button fx:id="btnIptal" text="İptal" onAction="#handleIptal" styleClass="secondary-button"/>
        </HBox>
    </GridPane>

    <!-- Table Area -->
    <TableView fx:id="kategoriTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colKategoriAdi" text="Kategori Adı" prefWidth="150"/>
            <TableColumn fx:id="colAciklama" text="Açıklama" prefWidth="250"/>
            <TableColumn fx:id="colIslemler" text="İşlemler" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblStatus" text=""/>
    </HBox>
</VBox>